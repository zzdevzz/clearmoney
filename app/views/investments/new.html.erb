<h1>investments</h1>

<%= simple_form_for(@investment, html: { class: 'text-white ' }) do |f| %>
  <%= f.input :name, input_html: { class: 'form-control dark-form-input'} %>
  <%= f.input :buy_price, input_html: { class: 'form-control dark-form-input'}  %>
  <%= f.input :quantity, input_html: { class: 'form-control dark-form-input'}  %>
  <%= f.input :buy_date, input_html: { class: 'form-control dark-form-input'} %>
  <%= f.submit "Submit investment", class: "btn btn-primary" %>
<% end %>
