<h1>Find some educational resources to understand your personal finance</h1>


<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: articles_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<form action="/open_ai" method="get">
  <input type="text" name="input" placeholder="write here">
  <input type="submit">
</form>

<div class="row">
