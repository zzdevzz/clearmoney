        <div class="p-3 text-content mb-3">
          <h2><%= article.title %></h2>
          <p><strong><%= article.description %></strong></p>
        </div>
      </div>
      <div class="flip-card-back p-4 text-content">
        <h2><%= article.title %></h2>
        <a class="external-link" href=<%=article.url%>><strong>click to view article</strong></a>
        <p><%= article.description %></p>
      </div>
    </div>
  </div>
  </div>
<% end %>
