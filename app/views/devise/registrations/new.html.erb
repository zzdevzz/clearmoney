<div class="text-white mt-5">
  <h2 class="mb-4">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'form-control dark-form-input' }%>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'form-control dark-form-input' }%>
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'form-control dark-form-input' }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'form-control dark-form-input' }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: 'form-control dark-form-input' } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: 'form-control dark-form-input' } %>
    </div>

    <div class="form-actions btn btn-warning">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
