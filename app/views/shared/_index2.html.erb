<% yearly = {} %>
<% fixed = {} %>

<% @fixed.each do |attribute| %>
  <% fixed[attribute.name] = attribute.sum(:amount) %>
<% end %>

<% @yearly.each do |attribute| %>
  <% yearly[attribute.name] = attribute.sum(:amount) %>
<% end %>

<turbo-frame id="content">
  <div class="row" style="gap:.5rem;">
    <div class="col-9">
      <div class="card p-4">
        <h3> <%=@user.username.titleize %> Breakdown </h3>
        <h4> Total: <%= number_to_currency(fixed.values.sum , unit: "Â£") %></h4>
        <%= column_chart yearly, height: "200px", colors: ["rgba(75, 192, 192, 0.2)", "rgba(255, 99, 132, 0.2)"]%>
      </div>
      <div class="card p-4">
        <%= column_chart fixed, height: "150px", legend: "left", stacked: true, library: {backgroundColor: "#eee"} %>
      </div>
    </div>
    <div class="card-container row g-3 w-25 p-3 card col mt-0 d-block overflow-auto">
      <h3> Sources </h3>
      <% @item.each do |item| %>
        <%= link_to "", class: "col-12 text-decoration-none", data: { turbo: false } do %>
          <%= render "/shared/card", item: item %>
        <% end %>
      <% end %>
    </div>
  </div>
</turbo-frame>
