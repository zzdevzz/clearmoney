<% totals = {} %>

<% @item.each do |attribute| %>
  <% totals[attribute.name] = attribute.sum(:amount) %>
<% end %>

<turbo-frame id="content">

<%= totals.class %>
  <div class="row">
    <div class="col-9">
      <div class="card p-4">
        <h3> <%=@user.username %> Breakdown </h3>
        <h4> Total: Â£</h4>
        <%= pie_chart totals, donut: true %>
      </div>
      <div class="card p-4">
        <h3> <%=@user.username %> Targets </h3>
        <%= image_tag "chart-js-example-chart-bar.png", style: "width: 150px; height: 150px;"%>
      </div>
    </div>
    <div class="card-container row g-3 w-25 p-3 card col mt-0">
      <h3> Sources </h3>
      <% totals.each do |item| %>
        <%= link_to "", class: "col-12 text-decoration-none", data: { turbo: false } do %>
          <%= render "/shared/card_user", item: item %>
        <% end %>
      <% end %>
    </div>
  </div>
</turbo-frame>
