<h1 class="text-white my-5">
  <%= "#{action_name.titleize} #{controller_name.titleize.sub("s", "")}" %>
</h1>

<%= simple_form_for(@debt, html: { class: 'text-white ' }) do |f| %>
  <%= f.input :name, input_html: { class: 'form-control dark-form-input'} %>
  <%= f.input :amount, input_html: { class: 'form-control dark-form-input'}  %>
  <%= f.input :notes, input_html: { class: 'form-control dark-form-input'}  %>
  <%= f.input :pay_by, input_html: { class: 'form-control dark-form-input'} %>
  <% if @debt.id %>
    <%= f.submit "Update debt", class: "btn btn-primary" %>
  <% else %>
    <%= f.submit "Add debt", class: "btn btn-primary" %>
  <% end %>
<% end %>
