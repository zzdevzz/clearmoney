<turbo-frame id="content">
  <h1>goals index page</h1>
  <div class="container">
    <div class="row">
      <%= render "shared/dashboard_actions", class: "card" %>
      <div class="col-6">
        <div class="card">
          <h3> Goal Breakdown </h3>
          <h4> <%= goals[0].amount + goals[1].amount %></h4>
          <%= image_tag "chart-js-example-chart-doughnut.png", style: "width: 150px; height: 150px; object-fit: cover"%>
        </div>
        <div class="card">
          <h3> Goal Targets </h3>
          <%= image_tag "chart-js-example-chart-bar.png", style: "width: 150px; height: 150px;"%>
        </div>
      </div>
      <div class="card-container mt-5 row g-3 flex-sm-column w-25 p-3 card col">
        <h3> Sources </h3>
        <% goals.each do |goal| %>
          <%= link_to("#", class: "col-12") do %>
            <%= render "/shared/card", item: goal %>
          <% end %>
        <% end %>
      </div>
    </div>
  <div>
</turbo-frame>
