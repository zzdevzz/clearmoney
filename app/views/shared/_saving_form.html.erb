<h1 class="text-white my-5">
  <%= "#{action_name.titleize} #{controller_name.titleize.sub(/s\z/, '')}" %>
</h1>

<%= simple_form_for(@saving, html: { class: 'text-white ' }) do |f| %>
  <%= f.input :name, input_html: { class: 'form-control dark-form-input'} %>
  <%= f.input :amount, input_html: { class: 'form-control dark-form-input'}  %>
  <% if @saving.id %>
    <%= f.submit "Update saving", class: "btn btn-primary" %>
  <% else %>
    <%= f.submit "Add saving", class: "btn btn-primary" %>
  <% end %>
<% end %>
