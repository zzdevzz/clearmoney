<% if controller_name == "pages" || controller_name == "users" %>
  <% cardname = item.name %></h2>
  <% cardprice = item.sum(:amount) %>
<% else %>
  <% cardname = item.name %></h2>
  <% cardprice = item.amount %>
<% end %>

<div class="source-card transparent-card p-2 d-flex flex-row align-items-center">
  <div class="rounded-circle mx-1">
    <i class="fa-solid fa-lightbulb"></i>
  </div>
  <div class="d-flex flex-column ms-2">
    <p class="mb-0 fs-6"><%= cardname.titleize %></p>
    <h3 class="mb-0 fs-6"><%= number_to_currency(cardprice , unit: "Â£")%></h3>
  </div>
</div>
