<div class="container">
  <h1 class="text-uppercase" data-controller="line-chart"><%= item.name %></h1>
  <% if controller_name == "investments" %>
    <h2> Price bought for: <%= item.amount %></h2>
    <h3>Current price: <%= item.price_current %> </h3>
    <%= line_chart item.price_history, curve: false, points: false, prefix: "Â£", min: (item.price_history.values.min), max: item.price_history.values.max %>
  <% else %>
    <h2> Price bought for: <%= item.amount %></h2>
  <% end %>
  <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-warning", data: { turbo: false } %>
  <%= button_to "Delete Item", url_for(controller: controller_path, action: 'destroy'), class: "btn btn-warning", method: :delete, data: {turbo_confirm: 'Are you sure?'} %>
</div>
