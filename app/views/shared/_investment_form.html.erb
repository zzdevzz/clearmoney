<h1 class="text-white my-5">
  <%= "#{action_name.titleize} #{controller_name.titleize.sub(/s\z/, '')}" %>
</h1>

<%= simple_form_for(@investment, html: { class: 'text-white ' }) do |f| %>
  <%= f.input :name, input_html: { class: 'form-control dark-form-input'}, hint: 'Currenty supports crypto only! Enter full name without space and lowercase e.g bitcoin, dogecoin, solana, ethereum etc...' %>
  <%= f.input :buy_price, input_html: { class: 'form-control dark-form-input'}  %>
  <%= f.input :quantity, input_html: { class: 'form-control dark-form-input'}  %>
  <%= f.input :buy_date, input_html: { class: 'form-control dark-form-input'} %>
  <% if @investment.id %>
    <%= f.submit "Update investment", class: "btn btn-primary" %>
  <% else %>
    <%= f.submit "Add investment", class: "btn btn-primary" %>
  <% end %>
<% end %>
